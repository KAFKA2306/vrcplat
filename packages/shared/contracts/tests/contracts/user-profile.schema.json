{
  "$ref": "#/definitions/user-profile",
  "definitions": {
    "user-profile": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "handle": {
          "type": "string",
          "minLength": 3,
          "maxLength": 32,
          "pattern": "^[a-z0-9_\\-]+$"
        },
        "displayName": {
          "type": "string",
          "minLength": 1,
          "maxLength": 64
        },
        "locale": {
          "type": "string",
          "pattern": "^[a-z]{2}(?:-[A-Z]{2})?$"
        },
        "avatarUrl": {
          "type": "string",
          "format": "uri"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "handle",
        "displayName",
        "locale",
        "createdAt",
        "updatedAt"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}
